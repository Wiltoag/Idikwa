<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             x:Class="IDIKWA_App.RecordButton"
             d:DesignHeight="120">
  <Button
    Command="{Binding $parent[UserControl].Command}">
    <Button.Styles>
      <Style
        Selector="Button">
        <Setter
          Property="Background"
          Value="Transparent" />
      </Style>
      <Style
        Selector="Button:pointerover /template/ ContentPresenter#PART_ContentPresenter">
        <Setter
          Property="Background"
          Value="Transparent" />
      </Style>
    </Button.Styles>
    <Grid>
      <Ellipse
        StrokeThickness="5"
        Stroke="Red"
        Fill="#6000" />
      <Image
        Margin="16"
        Source="/assets/images/recordOn.png" />
    </Grid>
  </Button>
</UserControl>