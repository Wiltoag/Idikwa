<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="using:IDIKWA_App"
        xmlns:i="using:Avalonia.Xaml.Interactivity"
        xmlns:ia="using:Avalonia.Xaml.Interactions.Core"
        mc:Ignorable="d"
        x:Class="IDIKWA_App.SettingsWindow"
        Width="600"
        Height="500"
        MinWidth="300"
        MinHeight="400"
        Title="{local:Resx settings}"
        Icon="/assets/icons/logo.ico"
        WindowStartupLocation="CenterOwner">
  <Window.DataTemplates>
    <DataTemplate
      DataType="{x:Type local:DeviceViewModel}">
      <CheckBox
        Padding="5,0"
        IsThreeState="False"
        HorizontalAlignment="Stretch"
        IsChecked="{Binding Path=Recording, Mode=TwoWay}">
        <TextBlock
          Text="{Binding Path=Device.FriendlyName}" />
      </CheckBox>
    </DataTemplate>
  </Window.DataTemplates>
  <Window.Styles>
    <Style Selector="ListBoxItem">
      <Setter Property="Padding" Value="0" />
      <Setter Property="HorizontalContentAlignment" Value="Stretch" />
    </Style>
  </Window.Styles>
  <Window.DataContext>
    <local:SettingsViewModel />
  </Window.DataContext>
  <DockPanel>
    <ScrollViewer
      HorizontalScrollBarVisibility="Disabled"
      VerticalScrollBarVisibility="Auto">
      <StackPanel
        Orientation="Vertical">
        <DockPanel>
          <TextBlock
            DockPanel.Dock="Left"
            Margin="5"
            VerticalAlignment="Center"
            Text="{Binding Source={local:Resx renderDevices}, StringFormat='{}{0} :'}" />
          <ListBox
            Margin="5"
            MaxHeight="200"
            Items="{Binding RenderDevices}" />
        </DockPanel>
        <DockPanel>
          <TextBlock
            DockPanel.Dock="Left"
            Margin="5"
            VerticalAlignment="Center"
            Text="{Binding Source={local:Resx captureDevices}, StringFormat='{}{0} :'}" />
          <ListBox
            Margin="5"
            MaxHeight="200"
            Items="{Binding CaptureDevices}" />
        </DockPanel>
        <DockPanel>
          <TextBlock
            DockPanel.Dock="Left"
            Margin="5"
            VerticalAlignment="Center"
            Text="{Binding Source={local:Resx outputDir}, StringFormat='{}{0} :'}" />
        </DockPanel>
      </StackPanel>
    </ScrollViewer>
  </DockPanel>
</Window>